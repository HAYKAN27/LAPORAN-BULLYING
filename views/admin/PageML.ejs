<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - ManajemenLaporan</title>

    <link rel="shortcut icon" href="./assets/compiled/svg/favicon.svg" type="image/x-icon">
    <link rel="shortcut icon"
        href="data:image/png;base64,"
        type="image/png">


</head>

<body>
    <%- include('../partials/sidebar') %>

        <h3>Data laporan</h3>

        <%- include('../partials/laporanmasuk') %>

            <div class="container-fluid mt-4">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">Tabel Data Laporan</h5>
                            </div>
                            <div class="card-body">
                                <!-- Search Bar -->
                                <div class="mb-3">
                                    <input type="text" class="form-control" id="searchInput" placeholder="Cari data...">
                                </div>

                                <!-- Tabel untuk desktop -->
                                <div class=" d-md-block">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover table-bordered" id="dataTable">
                                            <thead>
                                                <tr>
                                                <tr>
                                                    <th>NO</th>
                                                    <th>Status Pelapor</th>
                                                    <th>Nama Korban</th>
                                                    <th>Pendidikan Pelapor</th>
                                                    <th>Nama pelaku</th>
                                                    <th>Pendidikan Pelaku</th>
                                                    <th>Frekuensi Kejadian</th>
                                                    <th>Tempat Kejadian</th>
                                                    <th>Nama Tempat</th>
                                                    <th>Tanggal dan waktu </th>
                                                    <th>Bukti file</th>
                                                    <th>Nomer Telepon </th>
                                                    <th>Status</th>
                                                    <th class="p-4">Aksi</th>
                                                </tr>

                                                </tr>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <% const semuaLaporan=[...laporanAcc, ...laporanTolak]; %>
                                                    <% if (semuaLaporan.length===0) { %>
                                                        <tr>
                                                            <td colspan="1" class="text-center">Belum ada laporan
                                                                diterima</td>
                                                        </tr>
                                                        <% } else { %>

                                                            <% semuaLaporan.forEach((item, i)=> { %>
                                                                <tr>
                                                                    <td>
                                                                        <%= i + 1 %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.status_pelapor %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.nama_korban %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.pendidikan_pelapor %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.nama_pelaku %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.pendidikan_pelaku %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.frekuensi_kejadian %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.tempat_kejadian %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.nama_tempat %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.tanggal_waktu %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.bukti_file_path %>
                                                                    </td>
                                                                    <td>
                                                                        <%= item.nomor_telepon %>
                                                                    </td>


                                                                    <td>
                                                                        <% if (item.status==="diterima" ) { %>
                                                                            <span
                                                                                class="badge bg-success">Diterima</span>
                                                                            <% } else { %>
                                                                                <span
                                                                                    class="badge bg-danger">Ditolak</span>
                                                                                <% } %>
                                                                    </td>
                                                                    <td>
                                                                        <form action="/report/delete/<%= item.id %>"
                                                                            method="POST" class="d-inline ms-3">
                                                                            <button
                                                                                class="btn btn-outline-danger btn-sm"
                                                                                onclick="return confirm('Yakin ingin menghapus laporan ini?')">
                                                                                <i class="bi bi-trash-fill"></i>
                                                                            </button>
                                                                        </form>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>

                                                                    <% } %>
                                            </tbody>
                                        </table>

                                        </table>
                                    </div class="container">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination justify-content-center">
                                            <li class="page-item disabled">
                                                <a class="page-link">Previous</a>
                                            </li>
                                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                                            <li class="page-item">
                                                <a class="page-link" href="#">Next</a>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>

                                <%- include('../partials/footer') %>



                                    <!-- Script untuk pencarian & approval -->
                                    <script>
                                        // Search
                                        document.getElementById('searchInput').addEventListener('keyup', function () {
                                            const filter = this.value.toLowerCase();
                                            const rows = document.querySelectorAll('#dataTable tbody tr');
                                            rows.forEach(row => {
                                                const text = row.textContent.toLowerCase();
                                                row.style.display = text.includes(filter) ? '' : 'none';
                                            });
                                        });
                                    </script>





</body>

</html>