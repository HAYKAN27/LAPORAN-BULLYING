<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<style>
    .alert-success {
        background-color: #4ada97 !important;
        border-color: #198352 !important;
    }
</style>

<body>
    <%- include('./partialsUsers/sidebar') %>


        <div class="page-heading">
            <div class="row">
                <div class="container-fluid col-9 pt-4">
                    <h2 class="p-1">Selamat Datang kembali <%= nama %>
                    </h2>
                </div>
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-body py-4 px-4">
                            <div class="d-flex align-items-center">
                                <div class="avatar avatar-xl">
                                    <img src="/assets/compiled/jpg/1.jpg" alt="Face 1">
                                </div>
                                <div class="ms-3 name">
                                    <h5 class="font-bold">
                                        <%= nama %>
                                    </h5>
                                    <h6 class="text-muted mb-0">Pengguna</h6>
                                </div>
                            </div>
                        </div>
                                  
                    </div>
                </div>
                <h4 class="m-3">Total Laporan anda</h4>
    <div class="card">

        <div class=" d-md-block mt-4 ms-4 ">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="dataTable">
                    <thead>
                        <tr>
                            <th>NO</th>
                            <th>Status Pelapor</th>
                            <th>Nama Korban</th>
                            <th>Pendidikan Pelapor</th>
                            <th>Nama pelaku</th>
                            <th>Pendidikan Pelaku</th>
                            <th>Frekuensi Kejadian</th>
                            <th>Tempat Kejadian</th>
                            <th>Nama Tempat</th>
                            <th>Tanggal dan waktu </th>
                            <th>Bukti file</th>
                            <th>Nomer Telepon </th>
                            <th>Status</th>

                        <tr>
                    </thead>
                    <tbody>
                        <% if (laporan.length===0) { %>
                            <tr>
                                <td colspan="12" class="text-center">Belum ada laporan</td>
                            </tr>
                            <% } else { %>
                                <% laporan.forEach((item, i)=> { %>
                                    <tr>
                                        <td>
                                            <%= i + 1 %>
                                        </td>
                                        <td>
                                            <%= item.status_pelapor %>
                                        </td>
                                        <td>
                                            <%= item.nama_korban %>
                                        </td>
                                        <td>
                                            <%= item.pendidikan_pelapor %>
                                        </td>
                                        <td>
                                            <%= item.nama_pelaku %>
                                        </td>
                                        <td>
                                            <%= item.pendidikan_pelaku %>
                                        </td>
                                        <td>
                                            <%= item.frekuensi_kejadian %>
                                        </td>
                                        <td>
                                            <%= item.tempat_kejadian %>
                                        </td>
                                        <td>
                                            <%= item.nama_tempat %>
                                        </td>
                                        <td>
                                            <%= item.tanggal_waktu %>
                                        </td>
                                        <td>
                                            <%= item.bukti_file_path %>
                                        </td>
                                        <td>
                                            <%= item.nomor_telepon %>
                                        </td>
                                        <td>
                                            <% if (item.status==="diterima" ) { %>
                                                <span class="badge bg-success">Diterima</span>
                                                <% } else if (item.status==="ditolak" ) { %>
                                                    <span class="badge bg-danger">Ditolak</span>
                                                    <% } else { %>
                                                        <span class="badge bg-warning">Pending</span>
                                                        <% } %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } %>
                    </tbody>
    </div>

                

</body>

</html>